<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendor</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
    @using VendorOrder.Models;

    <h1>Current Vendors</h1>

    @if (@Model.Count == 0)
    {
      <h6>No Vendors have been added yet!</h6>
    } 

    @foreach (Vendor vendor in Model)
    {
      <h4><a href='/vendor/@vendor.Id'>@vendor.Name</a></h4>
    }
    <br><a href='/vendor/new'>Add a new Vendor</a><br>
    <p><a href='/'>Home</a></p>
    </div>
  </body>
</html>